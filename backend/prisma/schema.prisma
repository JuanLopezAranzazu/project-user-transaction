generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models

model User {
  id            Int      @id @default(autoincrement())
  fullName      String
  email         String   @unique
  passwordHash  String
  phone         String?
  address       String?
  createdAt     DateTime @default(now())
  transactions  Transaction[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  type        String
  description String?
  amount      Float
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}
